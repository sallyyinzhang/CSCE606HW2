-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:id => "title_header",:class =>session[:title]}=link_to 'Movie title', movies_path(:title_click =>"yes")
      %th Rating
      %th{:id => "release_date_header",:class => session[:release_date]}=link_to 'Release Date', movies_path(:release_date_click =>"yes")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
